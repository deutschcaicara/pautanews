# ─── Postgres ───
POSTGRES_USER=radar
POSTGRES_PASSWORD=radar_secret
POSTGRES_DB=radar_news
DATABASE_URL=postgresql+asyncpg://radar:radar_secret@postgres:5432/radar_news
DATABASE_URL_SYNC=postgresql+psycopg2://radar:radar_secret@postgres:5432/radar_news

# ─── RabbitMQ ───
RABBITMQ_DEFAULT_USER=radar
RABBITMQ_DEFAULT_PASS=radar_secret
CELERY_BROKER_URL=amqp://radar:radar_secret@rabbitmq:5672//

# ─── Redis ───
REDIS_URL=redis://redis:6379/0

# ─── App ───
APP_ENV=development
APP_LOG_LEVEL=INFO
APP_CORS_ORIGINS=["http://localhost:5173"]
# ─── Host Ports (Para evitar conflitos com outros projetos) ───
POSTGRES_PORT=5434
RABBITMQ_PORT=5674
RABBITMQ_UI_PORT=15674
REDIS_PORT=6381
API_PORT=8088
